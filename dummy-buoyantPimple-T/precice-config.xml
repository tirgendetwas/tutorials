<?xml version="1.0"?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="2">
    <data:scalar name="Temperature" />

    <mesh name="Fluid-Mesh">
      <use-data name="Temperature" />
    </mesh>

    <mesh name="Dummy-Mesh">
      <use-data name="Temperature" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Mesh" provide="yes" />
      <use-mesh name="Dummy-Mesh" from="Dummy-Temperature" />
      <export:vtu directory="preCICE-output-Fluid" />
      <mapping:nearest-neighbor
        direction="read"
        from="Dummy-Mesh"
        to="Fluid-Mesh"
        constraint="consistent" />
      <read-data name="Temperature" mesh="Fluid-Mesh" />
    </participant>

    <participant name="Dummy-Temperature">
      <use-mesh name="Dummy-Mesh" provide="yes" />
      <export:vtu directory="preCICE-output-Dummy" />
      <write-data name="Temperature" mesh="Dummy-Mesh" />
    </participant>

    <m2n:sockets from="Dummy-Temperature" to="Fluid" exchange-directory=".." />

    <coupling-scheme:serial-explicit>
      <time-window-size value="0.005" />
      <max-time value="4.0" />
      <participants first="Dummy-Temperature" second="Fluid" />
      <exchange data="Temperature" mesh="Dummy-Mesh" from="Dummy-Temperature" to="Fluid" />
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
